Gem::Specification.new do |s|
  s.name        = 'box-view-ruby'
  s.version     = '0.1.1'
  s.summary     = "box-view-ruby is a Ruby wrapper for the Box View API (The new version of Crocodoc API)."
  s.description = "box-view-ruby is a Ruby wrapper for the Box View API (The new version of Crocodoc API). The Box View API lets you upload documents and then generate secure and customized viewing sessions for them. The API is based on REST principles and generally returns JSON encoded responses, and in Ruby are converted to hashes unless otherwise noted."
  s.files       = ["lib/box-view.rb"]
end
